
{% extends 'base.html.twig' %}


{% block titulo %} Listado Productos {% endblock titulo %}

{% block contenido %}

	<h1>Listado de animales</h1>
	
	<table>
		<tr>
		
			<th>SKU</th>
			<th>Nombre</th>
			<th>Precio</th>
			<th>Stock</th>
			<th>Categoria</th>
			<th>Marca</th>
			<th>Descripcion</th>
			<th>Opciones</th>
			
		</tr>
		
		{% for p in productos %}
		
		<tr>
		
			<td>{{ p.getSku () }}</td>
			<td>{{ p.getNombreProduto()}}</td>
			<td>{{ p.getPrecioProducto}}</td>
			<td>{{ p.getStockProducto}}</td>
			<td>{{ p.getCategoria().getNombreCategoria() }}</td>
			<td>{{ p.getMarca().getNombreMarca() }}</td>
			<td>{{ p.getDescripcionProduto() }}</td>
			<td>
			
				<a href="eliminar?id={{ p.getSku() }}">Eliminar</a>
				<a href="modificar?id={{ p.getSku() }}">Modificar</a>
			</td>
		</tr>
		
		{% endfor %}
	
		
		
	
	
	</table>
	<h4>{{ mensaje }}</h4>
	
	{% endblock contenido %}
