
{% extends 'base.html.twig' %}


{% block contenido %}


<h1>Agregar Producto</h1>


<form action="almacenar" method="post">

	<table>
		<tr>
			<td>SKU</td>
			<td><input type="number" name="txtSKU" id="txtSKU" /></td>
		</tr>
		<tr>
			<td><label for="">Nombre</label></td>
			<td><input type="text" name="txtNombre" id="txtNombre" /></td>
		</tr>
		<tr>
			<td><label for="">Precio</label></td>
			<td><input type="number" name="txtPrecio" id="txtPrecio" /></td>

		</tr>

		<tr>
			<td><label for="">Categoria</label></td>
			<td><select name="cboCategoria" id="cboCategoria">
					<option value="">Seleccionar</option>

					{% for c in categorias %}

					<option value="{{ c.getIdCategoria() }}">{{ c.getNombreCategoria() }}</option>

					{% endfor %}

			</select></td>
		</tr>

		<tr>
			<td><label for="">Marca</label></td>
			<td><select name="cboMarca" id="cboMarca">
					<option value="">seleccionar</option>

					{% for m in marcas %}
					<option value="{{ m.getIdMarca() }}">{{ m.getNombreMarca() }}</option>
					{% endfor %}

			</select></td>
		</tr>
		<tr>
			<td><label for="">Descripcion</label></td>
			<td><input type="text" name="txtDescripcion" id="txtDescripcion" />
			</td>
		</tr>

		<tr>
			<td></td>
			<td><input type="submit" value="Guardar" /></td>
		</tr>
	</table>


</form>
{{ mensaje }}

{% endblock contenido %}

